<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name, :recipe_ingredients_attributes_0_quantity %>
    <%= ing.text_field :name %><br>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>
