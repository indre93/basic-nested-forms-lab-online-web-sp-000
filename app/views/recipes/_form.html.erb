<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :recipe_ingredients do |addr| %>
    <%= addr.label :name %>
    <%= addr.text_field :name %><br>

    <%= addr.label :quantity %>
    <%= addr.text_field :quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>
